{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020"],
    "declaration": true,
    "sourceMap": false,
    "noImplicitAny": false,
    "rootDir": "src",
    "outDir": "dist",
    "strict": true,
    "noUnusedLocals": false,
    "allowJs": false,
    "skipLibCheck": true,
    "resolveJsonModule": false,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/"],
  "exclude": [
    "node_modules",
    "dist",
    "__tests__",
    "babel.config.js",
    "src/sandbox.ts",
    "__tests__/**/*.ts"
  ]
}
