{
  "compilerOptions": {
    "module": "commonjs",
    "target": "ES2015",
    "lib": ["dom", "es2015", "es2016", "es2017", "es2018", "es2019", "es2020"],
    "declaration": true,
    "sourceMap": false,
    "noImplicitAny": false,
    "rootDir": "./src/",
    "outDir": "./dist",
    "strict": false,
    "noUnusedLocals": false,
    "allowJs": false,

  },
  "exclude": [
    "node_modules",
    "dist",
    "__tests__",
    "babel.config.js"
  ]
}
